<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/imageview_listview_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/textview_listview_row_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@drawable/ic_launcher"
        android:layout_margin="5dip"
        android:layout_toRightOf="@id/imageview_listview_row"
        android:gravity="center_vertical"
        android:padding="10dip"
        android:text="defaulttext"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
